/* pages/demo03/demo03.wxss */


.menu-1 image,.menu-2 image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
}
.menu-2{
    display: flex;
    /* 规定主轴方向 */
    flex-direction: row;
    /* 元素在主轴方向如何展示 space-around space-between flex-start左边开始排*/
    justify-content: space-around;
    /* 元素在副轴方向如何展示 */
    /* align-items: flex-end; */
}
.menu-2 .item{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.menu-1{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}
.auction .item{
    padding-bottom: 30rpx;
}
.auction .item .title{
    font-size: 50rpx;
    font-weight: 600;
}
.auction .item .tips{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 28rpx;
    color: chartreuse;
}
.auction .item .big{
    height: 400rpx;
    overflow: hidden;
}
.auction .item .big image{
    width: 100%;
    height: 100%;
}
.auction .item .small{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}
.auction .item .small image{
    width: 100rpx;
    height: 100rpx;
    padding-right: 20rpx;
}